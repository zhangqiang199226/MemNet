<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net6.0</TargetFrameworks>
        <LangVersion>13</LangVersion>
        <Nullable>enable</Nullable>
        <PackageId>MemNet</PackageId>
        <Version>1.0.0</Version>
        <Authors>MemNet Contributors</Authors>
        <Company>MemNet</Company>
        <Description>MemNet is a self‑improving memory layer for LLM applications for .NET developer.</Description>
        <PackageTags>memory;vector-store;embeddings;llm;openai;chroma;milvus;qdrant;ai</PackageTags>
        <PackageProjectUrl>https://github.com/yangzhongke/MemNet</PackageProjectUrl>
        <RepositoryUrl>https://github.com/yangzhongke/MemNet</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <EmbedUntrackedSources>true</EmbedUntrackedSources>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    </PropertyGroup>

